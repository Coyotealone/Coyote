{% extends 'CoyoteSiteBundle:Base:base.html.twig' %}

{% block nav %}

    <!--[if lt IE 9]>
        {{ include('CoyoteSiteBundle:Base:navigation_ie.html.twig') }}
    <![endif]-->
    <!--[if !IE]><!-->
        {{ include('CoyoteSiteBundle:Base:navigation.html.twig') }}
	<!--<![endif]-->

{% endblock %}

{% block content -%}
<p id="title">{{'absence.title.edit'|trans}} </p>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
<div class='table-responsive'>
    <table class='table' id='tab_expense'>
    	<tr>
    		<th>{{ form_label(edit_form.travel, 'absence.travel'|trans) }}</th>
    		<th>{{ form_label(edit_form.absence_name, 'absence.absence_name'|trans) }}</th>
    		<th>{{ form_label(edit_form.absence_duration, 'absence.absence_duration'|trans) }}</th>
    		<th>{{ form_label(edit_form.comment, 'absence.comment'|trans) }}</th>
    		<th>{{ form_label(edit_form.timetable, 'absence.timetable'|trans) }}</th>
    	</tr>
    	<td>
        {{ form_widget(edit_form.travel) }}
    		</td>
    		<td>
    		    {{ form_widget(edit_form.absence_name) }}
    		</td>
    		<td>
    		    {{ form_widget(edit_form.absence_duration) }}
    		</td>
    		<td>
    		    {{ form_widget(edit_form.comment) }}
    		</td>
    		<td>
    		    {{ form_widget(edit_form.timetable) }}
    		</td>
    </table>
</div><br>
<input class='btn btn-primary' type="submit" value={{'absence.update'|trans}} />

{{ form_end(edit_form) }}

{% endblock %}
