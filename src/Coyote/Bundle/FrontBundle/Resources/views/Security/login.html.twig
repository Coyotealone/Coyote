{% extends "CoyoteFrontBundle:Base:base.html.twig" %}

{% block nav %}
    {{ include('CoyoteFrontBundle:Base:navigation_login.html.twig') }}
{% endblock nav %}

{% block content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="table-responsive">
        <table class="table" style="max-width:500px; margin:auto">
            <tr>
                <th><label for="username">{{ 'security.username'|trans }} :</label></th>
                <td><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
            </tr>
            <tr>
                <th><label for="password">{{ 'security.password'|trans }} :</label></th>
                <td><input type="password" id="password" name="_password" required="required" /></td>
            </tr>
            <tr>
                <td class="center"><button class="btn btn-primary btn-default" type="submit" id="_submit" name="_submit">{{ 'security.submit.connexion'|trans }}</button></td>
                <td class="center"><a class="btn btn-danger btn-default" href="{{ path('sonata_user_resetting_request') }}">{{"security.submit.resetting"|trans}} ?</a></td>
            </tr>
        </table>
        </div>

    </form>
{% endblock content %}
