    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="cuve" value="{{entity.id}}" ></td>
        </tr>
    {% endfor %}
    </table>
    <button class='btnpage' type="submit" value="Suivant" id="suivant">{{ 'Suivant'|trans }}</button>
</form>
