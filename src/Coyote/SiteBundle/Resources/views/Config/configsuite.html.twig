{% block content %}
<form role="form" action="{{ path('coyote_configurator_show') }}" method='post'>
    <p>Sélection des suppléments de la cuve</p>
    <p> Les Portes </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        {% if 'PORT' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="porte" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    
    <p> Les Vannes </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        {% if 'VAN' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="vanne" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    
    <p> Les Essieux </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        {% if 'ESSIEU' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="essieu" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    
    <p> Les Roues </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        {% if 'ROUE' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="roue" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    
    <p> Eclairage / Signalisation </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        {% if 'GYRO' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="signal" value="{{entity.id}}" ></td>
        </tr>
        {% elseif 'PHARE' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="signal" value="{{entity.id}}" ></td>
        </tr>
        {% elseif 'SIGNA' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="signal" value="{{entity.id}}" ></td>
        </tr>
        {% elseif 'ECLAIR' in entity.item.designation1 %}
        <tr>
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="signal" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    
    <p> Suppléments Cuves </p>
    <table>
        <tr>
            <th>Code</th>
            <th>Désignation</th>
            <th>Prix HT</th>
            <th>Sélection</th>
        </tr>
    {% for entity in data %}
        <tr>
        {% if 'ACCRO' in entity.item.designation1 %}
            <td>{{ entity.item.code }}</td>
            <td>{{ entity.item.designation1 }} </td>
            <td>{{ entity.item.price }} €</td>
            <td><input type="radio" name="suppl" value="{{entity.id}}" ></td>
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    <button class='btnpage' type="submit" value="Afficher" id="afficher">{{ 'Afficher'|trans }}</button>
</form>
{% endblock %}