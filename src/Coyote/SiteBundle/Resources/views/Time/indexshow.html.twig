          <ul class="dropdown-menu">
            <li><a href="{{ path('coyote_time_index') }}">{{'Saisie'|trans}}</a></li>
            <li class="active"><a href="{{ path('coyote_time_indexshow') }}">{{'Consultation'|trans}}</a></li>
            <li><a href="{{ path('coyote_time_indexprint') }}">{{'Impression PDF'|trans}}</a></li>
