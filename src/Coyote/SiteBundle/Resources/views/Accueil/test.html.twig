<!DOCTYPE html>
<html>
    <head>
        <title>
            {% block title %}
                {{'base.title'|trans}}
            {% endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/coyotesite/css/styles.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/coyotesite/css/bootstrap.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/coyotesite/css/justified-nav.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('bundles/coyotesite/css/signin.css') }}" type="text/css" media="all" />
            <!--[if lt IE 9]>
              <script src="{{ asset('bundles/coyotesite/js/html5shiv.min.js') }}"></script>
              <script src="{{ asset('bundles/coyotesite/js/respond.min.js') }}"></script>
            <![endif]-->
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('bundles/coyotesite/images/pichonicon.ico') }}" />
    </head>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img alt="Pichon" src="{{ asset('bundles/coyotesite/images/logo_alpha.png') }}">
          </a>
          <ul class="nav navbar-nav">
            <li><a href="{{path('main_index')}}">{{'base.nav.accueil'|trans}}</a></li>
    		<li><a href="http://www.pichonindustries.com">{{'base.nav.site'|trans}}</a></li>
            <li><a href="{{path('contact_index')}}">{{'base.nav.contact'|trans}}</a></li>
            <li><a >{{'base.choose_language'|trans}} :</a></li>
            <li><a href="{{ path('main_language', {'_locale' : 'fr'}) }}">
                <img src="{{ asset('bundles/coyotesite/images/flag_francais.jpg') }}" alt="flag_french" id="flag_french"/>
            </a></li>
            <li><a href="{{ path('main_language', {'_locale' : 'en'}) }}">
                <img src="{{ asset('bundles/coyotesite/images/flag_grande_bretagne.jpg') }}" alt="flag_english" id="flag_english"/>
            </a></li>
            <li><a href="{{ path('main_language', {'_locale' : 'pl'}) }}">
                <img src="{{ asset('bundles/coyotesite/images/flag_pologne.jpg') }}" alt="flag_pologne" id="flag_pologne"/>
            </a></li>
          </ul>
            <button type="button" class="btn btn-default navbar-btn">Sign in</button>
        </div>
      </div>
    </nav>

    <div id="page">
        <body>
            <div id="bloc">
                <header>

                </header>
                <section>
                    <article>
                        {% block content %}
                            {% for type, messages in app.session.flashbag.all() %}
                                {% for message in messages %}
                                    <div class="flash-{{ type }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}

                            <div>
                                {% block fos_user_content %}
                                {% endblock fos_user_content %}
                            </div>
                        {% endblock %}
                    </article>
                </section>
            </div>
            <footer>
                <p>{{'base.copyright'|trans}} | {{'base.version'|trans}}</p>
            </footer>
        </body>
    </div>
</html>