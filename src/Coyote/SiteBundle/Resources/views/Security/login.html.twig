{% extends "CoyoteSiteBundle:Base:base.html.twig" %}

{% block nav %}
    {{ include('CoyoteSiteBundle:Base:navigation_login.html.twig') }}
{% endblock nav %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/coyotesite/css/style_login.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" role="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="table-responsive">
    <table class="table" style="max-width:500px; margin:auto">
        <tr>
            <th><label for="username">{{ 'security.username'|trans }} :</label></th>
            <td><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
        </tr>
        <tr>
            <th><label for="password">{{ 'security.password'|trans }} :</label></th>
            <td><input type="password" id="password" name="_password" required="required" /></td>
        </tr>
        <tr>
            <td colspan="2" class="center"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.remember_me'|trans }}</label></td>
        </tr>
        <tr>
            <td colspan="2" class="center"><button class="btn btn-danger btn-default" type="submit" id="_submit" name="_submit">{{ 'security.submit.connexion'|trans }}</button></td>
        </tr>
        <tr>
            <td colspan="2" class="center"><a class="btn btn-primary btn-default" href="{{ path('resetting_request') }}">{{"security.submit.resetting"|trans}} ?</a></td>
        </tr>
    </table>
    </div>

</form>
{% endblock %}