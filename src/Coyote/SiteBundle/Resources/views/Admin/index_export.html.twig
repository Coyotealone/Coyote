{% extends 'CoyoteSiteBundle:Admin:index.html.twig' %}

{% block content %}
    <form role="form" action="{{ path('admin_exportdatauser') }}" method='post'>
        <table class='table' id='tab_expense'>
        	<tr>
        	    <th>{{'Mois'|trans}}</th>
        		<th>{{'Année'|trans}}</th>
        	</tr>
            <tr>
                <td>
                    {% set counter = 0 %}
                    <select name='month' id='month' >
                    {% for mois in tab_num_mois %}
                        {% if mois == month %}
                        <option value={{mois}} selected>{{tab_mois[counter]|trans}}</option>
                        {% else %}
                        <option value={{mois}}>{{tab_mois[counter]|trans}}</option>
                        {% endif %}
                        {% set counter = counter + 1 %}
                    {% endfor %}
                    </select>
                </td>
                <td>
                    <select name='year' id='year' >
                    {% for annee in tab_annee %}
                        {% if annee == year %}
                        <option value={{annee}} selected>{{annee|trans}}</option>
                        {% else %}
                        <option value={{annee}}>{{annee|trans}}</option>
                        {% endif %}
                    {% endfor %}
                    </select>
                </td>
            </tr>
        </table>
        <button class='btnsave' type="submit" value="Telecharger" id="telecharger">{{ 'Télécharger'|trans }}</button>
    </form>
{% endblock %}