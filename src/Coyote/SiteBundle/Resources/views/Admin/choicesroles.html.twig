{% extends 'CoyoteSiteBundle:Admin:index.html.twig' %}

{% block content %}

    <form role="form" action="{{ path('admin_updateroles') }}" method='post'>
            <p id="title">
                <b>{{'admin.title.choicesroles'|trans}}</b>
            </p>
            <p>{{'admin.user'|trans}} : {{user.name}}</p>
            <div class='table-responsive'>
                <table class="table">
                    <thead>
                      <tr>
                        <th colspan="2" class="center">{{'admin.schedule.title'|trans}}</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>{{'admin.schedule.technician'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxTech" id="checkBoxTech" value="Tech">
                                </label>
                            </div>
                        </td>
                      </tr>
                      <tr>
                        <td>{{'admin.schedule.business'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxCadre" id="checkBoxCadre" value="Cadre">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                    <thead>
                      <tr>
                        <th colspan="2" class="center">{{'admin.expense.title'|trans}}</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>{{'admin.expense.trade_pichon'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxTradePichon" id="checkBoxTradePichon" value="Trade_Pichon">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                    <tbody>
                      <tr>
                        <td>{{'admin.expense.trade_gilibert'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxTradeGilibert" id="checkBoxTradeGilibert" value="Trade_Gilibert">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                    <thead>
                      <tr>
                        <th colspan="2" class="center">{{'admin.accounting.title'|trans}}</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>{{'admin.accounting.accountant'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxCompta" id="checkBoxCompta" value="Compta">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                    <thead>
                      <tr>
                        <th colspan="2" class="center">{{'admin.designoffice.title'|trans}}</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>{{'admin.designoffice.responsible'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxBE" id="checkBoxBE" value="BE">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                    <tbody>
                      <tr>
                        <td>{{'admin.designoffice.user'|trans}}</td>
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="checkBoxBEUser" id="checkBoxBEUser" value="BE_User">
                                </label>
                            </div>
                        </td>
                      </tr>
                    </tbody>
                </table>
            <div>
        <div id="btn_submit">
            <button class='btn btn-primary' type="submit" value="Add" id='add' name='add' >{{ 'admin.submit.add'|trans }}</button>
            <button class='btn btn-danger' type="submit" value="Remove" id='remove' name='remove' >{{ 'admin.submit.remove'|trans }}</button>
        </div>
    </form>

{% endblock content %}