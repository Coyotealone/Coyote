{% extends 'CoyoteSiteBundle:Holiday:index.html.twig' %}

{% block nav %}

    <!--[if lt IE 9]>
        {{ include('CoyoteSiteBundle:Base:navigation_ie.html.twig') }}
    <![endif]-->
    <!--[if !IE]><!-->
        {{ include('CoyoteSiteBundle:Base:navigation.html.twig') }}
	<!--<![endif]-->

{% endblock %}

{% block content %}

<p id="title">{{'holiday.title.create'|trans}} </p>

{{ form_start(form) }}
<div class='table-responsive'>
    <table class='table' id='tab_expense'>
    	<tr>
    		<th>{{ 'holiday.ca'|trans }}</th>
    		<th>{{ 'holiday.cp'|trans }}</th>
    		<th>{{ 'holiday.rtt'|trans }}</th>
    		<th>{{ 'holiday.hs'|trans }}</th>
    	</tr>
    	<td>
    	    {{ form_widget(form.ca) }}
		</td>
		<td>
		    {{ form_widget(form.cp) }}
		</td>
		<td>
		    {{ form_widget(form.rtt) }}
		</td>
		<td>
		    {{ form_widget(form.hs) }}
		</td>
    </table>
</div>
<div>
    <input class="btn btn-primary" type="submit" value="{{ 'holiday.create.submit'|trans }}" />
</div>
{{ form_end(form) }}
{% endblock %}