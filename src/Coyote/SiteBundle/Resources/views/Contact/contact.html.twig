{% extends "CoyoteSiteBundle:Base:layout.html.twig" %}

{% block link %}
    {{ include('CoyoteSiteBundle:Base:navigation_login.html.twig') }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/coyotesite/js/jquery-min.js') }}"/></script>
{% endblock %}

{% block content %}

    {% for flashMessage in app.session.flashbag.get('sendmessage') %}

        <p id="flashmessage">{{ flashMessage }}</p>
    
    {% endfor %}
    
    <form action="{{ path('contact_index') }}" method="post" {{ form_enctype(form) }}>
        
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr':{'placeholder': 'Email' }}) }}
        <br>

        {{ form_errors(form.subject) }}
        {{ form_widget(form.subject, { 'attr':{'placeholder': 'Sujet' }}) }}

        <br>
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { 'attr':{'placeholder': 'Contenu'}}) }}
        
        <br>
        {{ form_rest(form) }}

        <input type="submit" value="Envoyez"/>

    </form>

{% endblock %}