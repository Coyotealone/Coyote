{% extends "CoyoteSiteBundle:Base:layout.html.twig" %}

{% block link %}
    {{ include('CoyoteSiteBundle:Base:navigation_login.html.twig') }}
{% endblock %}

{% block javascripts %}
    <!--[if IE]>
        <script src="{{ asset('bundles/coyotesite/js/jquery-min.js') }}"/></script>
        <script src="{{ asset('bundles/coyotesite/js/jquery.js') }}"></script>
    <![endif]-->
    <!--[if !IE]><!-->
        <script src="{{ asset('bundles/coyotesite/js/jquery-min.js') }}"/></script>
        <script src="{{ asset('bundles/coyotesite/js/jquery.js') }}"></script>
    <!--<![endif]-->
{% endblock %}

{% block stylesheets %}
   {{ include('CoyoteSiteBundle:Base:css.html.twig') }}
{% endblock %}

{% block content %}

    {% for flashMessage in app.session.flashbag.get('sendmessage') %}

        <p id="flashmessage">{{ flashMessage }}</p>

    {% endfor %}
    <div id="contenu-contact">
        <p id="titreconfig"><b>{{'Contactez-nous'|trans}}</b></p>

        <form action="{{ path('contact_index') }}" method="post" {{ form_enctype(form) }}>

                    <input id="contact_email" type="email" required="required" name="contact[email]" class="form-control" placeholder="{{"Email"|trans}}" >
                    <input id="contact_subject" type="text" class="form-control" placeholder="{{"Sujet"|trans}}" required="required" name="contact[subject]">
                    <textarea class="form-control" rows="5" placeholder="{{"Contenu"|trans}}" id="contact_content" required="required" name="contact[content]"></textarea>

                    </br><button class="btn btn-danger btn-default" type="submit" id="_submit" name="_submit">{{ 'Envoyez'|trans }}</button>
        </form>
    </div>
{% endblock %}