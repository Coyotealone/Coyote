{% extends 'CoyoteSiteBundle:Time:index.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('bundles/coyotesite/js/jquery-min.js') }}"/></script>
{% endblock %}

{% block content %}
    
    <form action="{{ path('contact_index') }}" method="post" {{ form_enctype(form) }}>
        
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr':{'placeholder': 'Email' }}) }}
        <br>

        {{ form_errors(form.subject) }}
        {{ form_widget(form.subject, { 'attr':{'placeholder': 'Sujet' }}) }}

        <br>
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { 'attr':{'placeholder': 'Contenu'}}) }}
        
        <br>
        {{ form_rest(form) }}

        <input type="submit" value="Envoyez"/>

    </form>

    {#<form action="{{ path('contact_index') }}" method="post" >
        {{form(form)}}
        
    </form>
    #}
{% endblock %}