{% extends 'CoyoteSiteBundle:Base:base.html.twig' %}

{% block language %}
    <div id="choisir_langue">{{ 'Choisissez votre pays'|trans}} :
        <a href="{{ path('main_language', {'_locale' : 'fr'}) }}">
            <img src="{{ asset('bundles/coyotesite/images/flag_francais.jpg') }}" alt="flag_french" id="flag_french"/>
        </a> |
        <a href="{{ path('main_language', {'_locale' : 'en'}) }}">
            <img src="{{ asset('bundles/coyotesite/images/flag_grande_bretagne.jpg') }}" alt="flag_english" id="flag_english"/>
        </a> |
        <a href="{{ path('main_language', {'_locale' : 'pl'}) }}">
            <img src="{{ asset('bundles/coyotesite/images/flag_pologne.jpg') }}" alt="flag_pologne" id="flag_pologne"/>
        </a>
    </div>
{% endblock %}

{% block stylesheets %}
   {{ include('CoyoteSiteBundle:Base:css.html.twig') }}
{% endblock %}


{% block content %}

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>


{% endblock %}