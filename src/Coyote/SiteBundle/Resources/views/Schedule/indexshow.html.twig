{% extends 'CoyoteSiteBundle:Schedule:index.html.twig' %}

{% block link %}

    <!--[if lt IE 9]>
        {{ include('CoyoteSiteBundle:Base:navigation_ie.html.twig') }}
    <![endif]-->
    <!--[if !IE]><!-->
        {{ include('CoyoteSiteBundle:Base:navigation.html.twig') }}
	<!--<![endif]-->

{% endblock %}


{% block content %}
<p id="titreconfig">{{'Consultation des temps de présence'|trans}} </p>
<form role="form" action="{{ path('schedule_show') }}" method='get'>
    <table class='table'>
    	<tr>
    	    <th>{{'Mois'|trans}}</th>
    		<th>{{'Année'|trans}}</th>
    	</tr>
        <tr>
            <td>
                {% set counter = 0 %}
                <select name='month' id='month' >
                {% for mois in tab_num_mois %}
                    {% if mois == month %}
                    <option value={{mois}} selected>{{tab_mois[counter]|trans}}</option>
                    {% else %}
                    <option value={{mois}}>{{tab_mois[counter]|trans}}</option>
                    {% endif %}
                    {% set counter = counter + 1 %}
                {% endfor %}
                </select>
            </td>
            <td>
                <select name='year' id='year' >
                {% for annee in tab_annee %}
                    {% if annee == year %}
                    <option value={{annee}} selected>{{annee|trans}}</option>
                    {% else %}
                    <option value={{annee}}>{{annee|trans}}</option>
                    {% endif %}
                {% endfor %}
                </select>
            </td>
        </tr>
    </table>
    <button class='btnsave' type="submit" value="Afficher" id="afficher">{{'Afficher'|trans }}</button>
</form>
{% endblock %}