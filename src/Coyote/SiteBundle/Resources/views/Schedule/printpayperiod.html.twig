<page>
<div id="lien">
    <img src="./bundles/coyotesite/images/logo1.jpg" alt="PICHON" id="logo"/>
</div>

<p style="text-align:center">{{"schedule.title.summary"|trans}}</p>

{% if dataschedule %}
<table>
    <tr>
        <td style="background:#7FC6BC; color:white">{{'schedule.holiday'|trans}}</td>
        <td style="background:#01B0F0; color:white">{{'schedule.weekend'|trans}}</td>
        <td style="background:#99CCCC; color:white">{{'schedule.working_time_week'|trans}}</td>
    </tr>
</table>

<table class='table' id='tab_expense' style="width:900px;">
	<tr style="width:900px;">
	    <th style="width: 80px; text-align:center">{{'schedule.dayofweek'|trans}}</th>
	    <th style="width: 85px; text-align:center" id='tab_time_date'>{{'schedule.date'|trans}}</th>
		<th style="text-align:center" id='tab_time_debut'>{{'schedule.start'|trans}}</th>
		<th style="text-align:center" id='tab_time_fin'>{{'schedule.end'|trans}}</th>
		<th style="text-align:center" id='tab_time_pause'>{{'schedule.break'|trans}}</th>
		<th style="width: 60px; text-align:center" id='tab_time_working_time'>{{'schedule.working_time'|trans}}</th>
		<th style="text-align:center" id='tab_time_travel'>{{'schedule.travel'|trans}}</th>
		<th style="text-align:center" id='tab_time_absence'>{{'schedule.absence'|trans}}</th>
		<th style="width: 60px; text-align:center" id='tab_time_workingtime'>{{'schedule.absence_time'|trans}}</th>
		<th style="width: 20%; text-align:center" id='tab_time_comment'>{{'schedule.comment'|trans}}</th>
	</tr>
	{% set counter = 0 %}
	{% for entity in dataschedule %}
        <tr style="width:900px;">
            {% if entity.holiday == "1" %}
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.day|capitalize|trans}}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.date|date("d/m/Y")}}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.start }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.end }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.break }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.working_time }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.travel }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.absence_name|trans }}</td>
                <td style="background:#7FC6BC; color:white; text-align:center">{{ entity.absence_duration|trans }}</td>
                <td style="width: 20%; background:#7FC6BC; color:white;">{{ entity.comment }}</td>
            {% elseif entity.day == "samedi" %}
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.day|capitalize|trans}}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.date|date("d/m/Y")}}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.start }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.end }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.break }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.working_time }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.travel }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.absence_name|trans }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.absence_duration|trans }}</td>
                <td style="width: 20%; background:#01B0F0; color:white;">{{ entity.comment }}</td>
            {% elseif entity.day == "dimanche" %}
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.day|capitalize|trans}}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.date|date("d/m/Y")}}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.start }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.end }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.break }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.working_time }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.travel }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.absence_name|trans }}</td>
                <td style="background:#01B0F0; color:white; text-align:center">{{ entity.absence_duration|trans }}</td>
                <td style="width: 20%; background:#01B0F0; color:white;">{{ entity.comment }}</td>
        </tr>
        <tr>
                <td colspan=10 style="width: 30%; background:#99CCCC; color:white; text-align:center">{{"schedule.hours_worked_week"|trans}} : {{timeweek[counter]}}</td>
                {% set counter = counter + 1 %}
        </tr>
        <tr>
            {% else %}
                <td style="text-align:center" >{{ entity.day|capitalize|trans}}</td>
                <td style="text-align:center" >{{ entity.date|date("d/m/Y")}}</td>
                <td style="text-align:center" >{{ entity.start }}</td>
                <td style="text-align:center" >{{ entity.end }}</td>
                <td style="text-align:center" >{{ entity.break }}</td>
                <td style="text-align:center" >{{ entity.working_time }}</td>
                <td style="text-align:center" >{{ entity.travel }}</td>
                <td style="text-align:center" >{{ entity.absence_name|trans }}</td>
                <td style="text-align:center" >{{ entity.absence_duration|trans }}</td>
                <td style="width: 20%;">{{ entity.comment }}</td>
                {% if loop.last %}
        </tr>
        <tr>
                <td colspan=10 style="width: 30%; background:#99CCCC; color:white; text-align:center">{{"schedule.hours_worked_week"|trans}} : {{timeweek[counter]}}</td>
                {% endif %}
            {% endif %}
        </tr>
    {% endfor %}

</table>
<p style="text-align:center">
    {{'schedule.number_rtt_year'|trans}} : {{rttyear}}<br>
    {{'schedule.number_cp_year' | trans }} : {{cpyear}} <br>
    {{"schedule.number_ca_year" | trans }} : {{cayear}}
</p>
{% else %}
<p style="text-align:center">{{'schedule.no_data_found'|trans}}</p>
{% endif %}

</page>