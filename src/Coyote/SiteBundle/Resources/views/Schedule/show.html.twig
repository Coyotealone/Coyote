{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Schedule</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Break</th>
                <td>{{ entity.break|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Working_time</th>
                <td>{{ entity.workingtime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Working_hours</th>
                <td>{{ entity.workinghours }}</td>
            </tr>
            <tr>
                <th>Travel</th>
                <td>{{ entity.travel }}</td>
            </tr>
            <tr>
                <th>Absence</th>
                <td>{{ entity.absence }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('schedule') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('schedule_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
